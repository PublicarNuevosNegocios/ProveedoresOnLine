@if (HttpContext.Current.Request.RawUrl.ToString().Contains("/Customer"))
{
    <ul class="MenuButtons MenuCustomer">
        <li class="MenuButtons_Provider">
            <a href="@Url.Action(MVC.Provider.ActionNames.Index,MVC.Provider.Name)">Proveedores</a>
        </li>
        <li class="MenuButtons_Customer selected">
            <a href="@Url.Action(MVC.Customer.ActionNames.ListCustomer, MVC.Customer.Name)">Compradores</a>
        </li>
        @if (DocumentManagement.Models.General.SessionModel.CurrentLoginUser.RelatedApplicationRole.Select(x => x.Role).First() == SessionManager.Models.Auth.enumRole.SystemAdministrator)
        {
            string urlAdmin = DocumentManagement.Models.General.InternalSettings.Instance[DocumentManagement.Models.General.Constants.C_Settings_Url_AdminRoles].Value.ToString();
            
            <li class="MenuButtons_BO">
                <a href="@urlAdmin" target="_blank">Administrar Usuarios</a>
            </li>
        }
        @*<li class="MenuButtons_BO">
                <a href="">Ir a Backoffice</a>
            </li>*@
    </ul>
}
