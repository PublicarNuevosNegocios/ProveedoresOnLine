@model DocumentManagement.Models.Provider.ProviderFormModel


<div class="DMLogInProviders">
    <div class="DMLogIntopWrapper">
        <img class="DMProviderlogo" src="/Content/Images/lidl.png" alt="" />
        <label>REGISTRO DE INFORMACIÓN DE PROVEEDORES</label>
        <img class="DMPOLogo" src="/Content/Images/LogoPOLogInAlpha.png" alt="" />
    </div>
    <div class="DMLogInformWrapper">

        <label class="DMTextWelcome">Bienvenido al sistema de registro de proveedores de<br />Proveedores Online. </label>
        <hr />
        <label class="DMTextDirection">Para iniciar el proceso de registro ingrese su tipo y número de Identificación, y de clic en ingresar</label>


        <form action="@(Url.Action(MVC.ProviderForm.ActionNames.LoginProvider, MVC.ProviderForm.Name,
                        new
                        {
                            ProviderPublicId = Model.RealtedProvider.ProviderPublicId,
                            FormPublicId = Model.RealtedForm.FormPublicId,
                        }))" method="post">
            <ul class="DMForm">
                <li>
                    <span>Tipo de identificación</span>
                    <select name="IdentificationType"></select>
                </li>
                <li>
                    <span>Número de identificación</span>
                    <input type="text" name="IdentificationNumber" />
                </li>
                <li>
                    <input class="DMButtons" type="submit" value="Ingresar" />
                </li>
            </ul>
        </form>

    </div>
    <div class="DMLogInbottomWrapper">
        <img class="DMLogPublicar" src="~/Content/Images/LogoPublicarFooterBlack.png" alt="" />
        <label class="DMPublicarCopyright">Publicar publicidad y soluciones multimedia - Proveedores Online &copy; 2014 - 2015</label>
    </div>
</div>



