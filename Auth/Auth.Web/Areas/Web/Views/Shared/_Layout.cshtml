<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>

    @*Render bondles styles*@
    @Styles.Render("~/" + Auth.Web.Controllers.BaseController.AreaName + "/content/css")
    @Styles.Render("~/" + Auth.Web.Controllers.BaseController.AreaName + "/kendo/css")
</head>
<body>
    <div>
        @RenderBody()
    </div>

    @*Render boundles scripts*@
    @Scripts.Render("~/" + Auth.Web.Controllers.BaseController.AreaName + "/bundles/jquery")
    @Scripts.Render("~/" + Auth.Web.Controllers.BaseController.AreaName + "/bundles/jqueryval")
    @Scripts.Render("~/" + Auth.Web.Controllers.BaseController.AreaName + "/bundles/modernizr")
    @Scripts.Render("~/" + Auth.Web.Controllers.BaseController.AreaName + "/bundles/bootstrap")
    @Scripts.Render("~/" + Auth.Web.Controllers.BaseController.AreaName + "/sitescripts")
    @Scripts.Render("~/" + Auth.Web.Controllers.BaseController.AreaName + "/kendo/js")


    @*Render inline site scripts*@
    @RenderSection("inlinescripts", required: false)

    <!--Google Analitycs-->
    @{
        string AnalitycsScript = string.Empty;
        if (ViewBag.AppName != null)
        {
            string AppName = ViewBag.AppName;
            AnalitycsScript = SettingsManager.SettingsController.SettingsInstance.ModulesParams
                    [Auth.Interfaces.Constants.C_SettingsModuleName]
                    [Auth.Interfaces.Constants.C_AuthAnalytics.Replace("{AppName}", AppName)].Value;
        }
    }
    @Html.Raw(AnalitycsScript)
</body>
</html>
