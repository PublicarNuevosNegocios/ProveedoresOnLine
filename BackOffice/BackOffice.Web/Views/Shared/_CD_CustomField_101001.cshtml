@model Tuple<BackOffice.Models.Provider.ProviderViewModel, IntegrationPlatform.Models.Integration.CustomFieldModel, ProveedoresOnLine.Company.Models.Util.GenericItemModel, string>

@if (!Model.Item1.RenderScripts)
{
    var oCustomTextId = Model.Item3 != null ? Model.Item3.ItemId : 0;
    var oCustomTextInfoId = Model.Item3 != null && Model.Item3.ItemInfo != null ? Model.Item3.ItemInfo.FirstOrDefault().ItemInfoId : 0;
    var oCustomText = Model.Item3 != null && Model.Item3.ItemInfo != null ? Model.Item3.ItemInfo.FirstOrDefault().Value : string.Empty;

    <span>@Model.Item2.Label</span>
    <br />
    <input id="CustomData_@(Model.Item2.AditionalFieldId + "_" + oCustomTextId + "_" + Model.Item4 + "_" + oCustomTextInfoId)" name="CustomData_@(Model.Item2.AditionalFieldId + "_" + oCustomTextId + "_" + Model.Item4)" type="text" value="@oCustomText" />
}