@model BackOffice.Models.Customer.CustomerViewModel

@if (!Model.RenderScripts)
{
    <ul class="POBOProviderActions">
        @if (Model.CustomerMenu != null &&
            Model.CustomerMenu.Count > 0)
        {
            if (Model.CurrentSubMenu != null &&
                Model.CurrentSubMenu.LastMenu != null)
            {
                if (Model.IsForm)
                {
                    <li>
                        <a class="POBOProgressButtons" href="javascript:Provider_SubmitForm({FormId:'frmProviderUpsert',StepValue:'last'})"><< Anterior</a>
                    </li>
                }
                else
                {
                    <li>
                        <a class="POBOProgressButtons" href="javascript:Provider_Navigate({Url: '@Model.CurrentSubMenu.LastMenu.Url'}, {GridName:'@Model.GridToSave'}, {ButtonClass:'POBOProgressButtons' })"><< Anterior</a>
                    </li>
                }
            }
            if (Model.CurrentSubMenu != null &&
                Model.CurrentSubMenu.NextMenu != null)
            {
                if (Model.IsForm)
                {
                    <li>
                        <a class="POBOProgressButtons" href="javascript:Provider_SubmitForm({FormId:'frmProviderUpsert',StepValue:'next'})">Siguiente >></a>
                    </li>
                }
                else
                {
                    <li>                                                                    
                        <a class="POBOProgressButtons" href="javascript:Provider_Navigate({Url: '@Model.CurrentSubMenu.NextMenu.Url'}, {GridName:'@Model.GridToSave'}, {ButtonClass:'POBOProgressButtons' })">Siguiente >></a>
                    </li>
                }
            }
            else if (Model.CurrentSubMenu != null &&
                Model.CurrentSubMenu.NextMenu == null)
            {
                <li>
                    <a class="POBOProgressButtons" href="@(Url.Action(MVC.Provider.ActionNames.Index, MVC.Provider.Name))">Finalizar</a>
                </li>
            }
        }
        @if (Model.IsForm)
        {
            <li class="POBOButtonsSaveProvider">
                <a class="POBOButtons" href="javascript:Provider_SubmitForm({FormId:'frmProviderUpsert'})">Guardar</a>
            </li>
        }
    </ul>
}


