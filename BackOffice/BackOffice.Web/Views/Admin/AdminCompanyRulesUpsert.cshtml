@model BackOffice.Models.Provider.ProviderViewModel

@{
    ViewBag.Title = "Empresas Certificadoras";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*ESTE ES EL ENVUELTO COMPLETO DE MENU LATERAL Y CONTENIDO*@
<div class="POBOProviderWrapper">
    @*ESTE ES QUE TRAE EL PARCIAL QUE PINTA EL MENU LATERAL*@
    <div class="POBOProviderSideMenuWrapper">
        @Html.Partial(MVC.Shared.Views._P_ProviderMenu, Model)
    </div>
    <div class="POBOProviderContentWrapper">
        <div id="POBOProviderUpsertForm">
            <label class="POBOSectionTitles">Administración de Empresas Certificadoras</label>
            @{
                Model.IsForm = false;
                Html.RenderPartial(MVC.Shared.Views._P_ProviderActions, Model);
            }
            <div id="divGridCompanyRulesInfo"></div>
            <br />
            @{
                Model.IsForm = false;
                Html.RenderPartial(MVC.Shared.Views._P_ProviderActions, Model);
            }
        </div>
    </div>
</div>

@{
    Model.RenderScripts = true;
}

@section inlinescripts{

    @Html.Partial(MVC.Shared.Views._P_ProviderMenu, Model);

    @{

        //ger CompanyRulesTypeValues
        string oAdminCompanyRulesInfoOptionList = "[]";
        if (Model.ProviderOptions != null && 
            Model.ProviderOptions.Count > 0)
        {
            Dictionary<int, List<ProveedoresOnLine.Company.Models.Util.CatalogModel>> oOptionAdminRules =
                Model.ProviderOptions.
                GroupBy(x => x.CatalogId).
                Select(x =>
                new
                {
                    okey = x.Key,
                    ovalue = Model.ProviderOptions.Where(y => y.CatalogId == x.Key).OrderBy(y => y.ItemName).ToList(),
                }).ToDictionary(k => k.okey, v => v.ovalue);

            oAdminCompanyRulesInfoOptionList = (new System.Web.Script.Serialization.JavaScriptSerializer()).
                Serialize(oOptionAdminRules.Select(x => new { Key = x.Key, Value = x.Value }));
        }
    }

    <script type="text/javascript">
        var vAdminCompanyRulesInfoOptionList = @(Html.Raw(oAdminCompanyRulesInfoOptionList));

        $(document).ready(function () {
            Admin_CategoryObject.Init({
                ObjectId: 'divGridCompanyRulesInfo',
                UtilOptions: vAdminCompanyRulesInfoOptionList ,
                CategoryType: 'AdminCompanyRules',
            });
            Admin_CategoryObject.RenderAsync();
        });
    </script>
}