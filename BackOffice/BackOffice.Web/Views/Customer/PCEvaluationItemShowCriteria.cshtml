@model BackOffice.Models.Customer.CustomerViewModel

@{
    ViewBag.Title = "Comprador - Detalle del criterio de evaluación.";
    Layout = MVC.Shared.Views._Layout;
    if (Model != null){Model.RenderScripts = false;}
}
@*ESTE ES EL ENVUELTO COMPLETO DE MENU LATERAL Y CONTENIDO*@
<div class="POBOProviderWrapper">
    @*ESTE ES QUE TRAE EL PARCIAL QUE PINTA EL MENU LATERAL*@
    <div class="POBOProviderSideMenuWrapper">
        @Html.Partial(MVC.Shared.Views._C_CustomerMenu, Model)
    </div>

    <div class="POBOProviderContentWrapper">
        <div id="POBOProviderUpsertForm">
            <label class="POBOSectionTitles">Detalle de los criterios de evaluación</label>
            <div class="POBOEvaluationGoBackWrapper">
               
                    <h3>@Model.RelatedProjectConfig.ProjectProviderName</h3>
                    <ul>
                            @foreach (var Item in Model.ProjectConfigOptions.Where(x => x.CatalogId == (int)BackOffice.Models.General.enumCatalog.EvaluationCriteria))
                            {
                                Model.RelatedProjectConfig.RelatedProjectProvider.RelatedEvaluationItem.All(x =>
                                {
                                    Html.RenderPartial(MVC.Shared.Views._PJ_EvaluationCriteria_1404001.ToString().Replace("1404001", Item.ItemId.ToString()), new Tuple<BackOffice.Models.Customer.CustomerViewModel, BackOffice.Models.Customer.EvaluationItemViewModel>(Model, new BackOffice.Models.Customer.EvaluationItemViewModel(x)));
                                    return true;
                                });
                                
                                

                            }
                    </ul>
                
            </div>
        </div>
    </div>
</div>

