@model MarketPlace.Models.Provider.ProviderSearchViewModel

@if (Model.RenderScripts)
{
    <div>
        <ul>
            <li>
                @if (Model.SearchOrderType == MarketPlace.Models.General.enumSearchOrderType.CustomerRate)
                {
                    <input type="radio" name="Search_rbOrder" searchordertype="@(((int)MarketPlace.Models.General.enumSearchOrderType.CustomerRate).ToString())" orderorientation="0" checked="checked" />
                }
                else
                {
                    <input type="radio" name="Search_rbOrder" searchordertype="@(((int)MarketPlace.Models.General.enumSearchOrderType.CustomerRate).ToString())" orderorientation="0" />
                }
                <span>Orden por calificación</span>
            </li>
            <li>
                @if (Model.SearchOrderType == MarketPlace.Models.General.enumSearchOrderType.Alphabetic)
                {
                    <input type="radio" name="Search_rbOrder" searchordertype="@(((int)MarketPlace.Models.General.enumSearchOrderType.Alphabetic).ToString())" orderorientation="1" checked="checked" />
                }
                else
                {
                    <input type="radio" name="Search_rbOrder" searchordertype="@(((int)MarketPlace.Models.General.enumSearchOrderType.Alphabetic).ToString())" orderorientation="1" />
                }
                <span>Orden alfabético</span>
            </li>
            <li>
                @if (Model.SearchOrderType == MarketPlace.Models.General.enumSearchOrderType.Relevance)
                {
                    <input type="radio" name="Search_rbOrder" searchordertype="@(((int)MarketPlace.Models.General.enumSearchOrderType.Relevance).ToString())" orderorientation="0" checked="checked" />
                }
                else
                {
                    <input type="radio" name="Search_rbOrder" searchordertype="@(((int)MarketPlace.Models.General.enumSearchOrderType.Relevance).ToString())" orderorientation="0" />
                }
                <span>Orden relevancia</span>
            </li>
        </ul>
    </div>
}
