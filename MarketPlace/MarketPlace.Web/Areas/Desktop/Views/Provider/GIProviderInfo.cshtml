                                            <br />
                                            <label class="POMPProviderBoxInfo">Certificado de gestión OHSAS 18001</label>
                                            <br />
                                            <span>Si</span>
                                        }
                                        else
                                        {
                                            <br />
                                            <label class="POMPProviderBoxInfo">Certificado de gestión OHSAS 18001</label>
                                            <br />
                                            <span>No</span>
                                        }
                                    </div>
                                }
                                @if (Model.RelatedCertificationBasicInfo != null && Model.RelatedCertificationBasicInfo.Count > 0)
                                {
                                    <div class="col-sm-4 POMPBorderbottom  POMPProviderBoxInfo">

                                        @if (Model.RelatedCertificationBasicInfo.Where(x => x.LargeValue == "1" && (x.ItemInfoType.ItemId == 170 || x.ItemInfoType.ItemId == 177)).Count() > 0)
                                        {
                                            <br />
                                            <label class="POMPProviderBoxInfo">Certificados de gestión ISO</label>
                                            <br />
                                            <span>@Model.RelatedCertificationBasicInfo.Where(x => x.LargeValue == "1" && (x.ItemInfoType.ItemId == 170 || x.ItemInfoType.ItemId == 177)).Select(x => x.ItemInfoType.ItemName).FirstOrDefault()</span>
