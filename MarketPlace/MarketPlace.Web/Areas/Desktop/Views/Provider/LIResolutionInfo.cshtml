@model MarketPlace.Models.Provider.ProviderViewModel
@{
    ViewBag.Title = "Proveedores OnLine - Resoluciones";
    Layout = MVC.Desktop.Shared.Views._Layout;

    Model.RenderScripts = false;
}
@*ESTE ES EL ENVUELTO COMPLETO DE MENU LATERAL Y CONTENIDO*@
<div class="POMPProviderGreatWrapper">
    @*ESTE ES QUE TRAE EL PARCIAL QUE PINTA EL MENU LATERAL*@
    <div class="POMPProviderSideMenuWrapper">
        @Html.Partial(MVC.Desktop.Shared.Views._P_ProviderMenu, Model)
    </div>

    <div class="POMPProviderDataWrapper">
        <label class="POMPSectionTitles">Resoluciones</label>
        <div class="container-fluid POMPContainerDetail">
            @{
                if (Model.RelatedLegalInfo != null && Model.RelatedLegalInfo.Count > 0)
                {

                    foreach (var item in Model.RelatedLegalInfo)
                    {
                        <div class="row POMPSectionTitlesBox">
                            <div class="col-sm-12">
                                @if (!string.IsNullOrEmpty(item.RS_EntityType) && !string.IsNullOrEmpty(item.RS_Description))
                                {
                                    <strong>@item.RS_EntityType</strong>
                                }
                                else
                                {
                                    <span>N/D</span>
                                }
                            </div>
                        </div>
                        <br />
                        <div class="container-fluid POMPProviderDetailContainer">
                            <div class="row">
                                <div class="col-sm-4 POMPProviderBoxInfo"><label>Fecha Inicial</label></div>
                                <div class="col-sm-4 POMPProviderBoxInfo"><label>Fecha Final</label></div>
                                <div class="col-sm-4 POMPProviderBoxInfo"><label>Alcance</label></div>
                            </div>
                            <div class="row POMPBorderbottom">
                                <div class="col-sm-4  POMPProviderBoxInfo">
                                    @if (!string.IsNullOrEmpty(item.RS_StartDate))
                                    {
                                        <span>@item.RS_StartDate</span>
                                    }
                                    else
                                    {
                                        <span>N/D</span>
                                    }
                                </div>
                                <div class="col-sm-4  POMPProviderBoxInfo">
                                    @if (!string.IsNullOrEmpty(item.RS_EndDate))
                                    {
                                        <span>@item.RS_EndDate</span>
                                    }
                                    else
                                    {
                                        <span>N/D</span>
                                    }
                                </div>
                                <div class="col-sm-4  POMPProviderBoxInfo">
                                    @if (!string.IsNullOrEmpty(item.RS_Description))
                                    {
                                        <span>@item.RS_Description</span>
                                    }
                                    else
                                    {
                                        <span>N/D</span>
                                    }
                                </div>
                            </div>
                            <br />
                            <div class="row">
                                <div class="col-sm-4 POMPProviderBoxInfo"><label>Archivo Anexo</label></div>
                            </div>
                            <div class="row POMPBorderbottom">
                                <div class="col-sm-4  POMPProviderBoxInfo">
                                    @if (!string.IsNullOrEmpty(item.RS_ResolutionFile))
                                    {
                                        <a class="POMPProviderDocumetIcon" target="_blank" href="@item.RS_ResolutionFile">Ver Archivo Anexo</a>
                                    }
                                    else
                                    {
                                        <span>N/D</span>
                                    }
                                </div>
                            </div>
                            <br />
                        </div>


                    }
                }
            }
        </div>

    </div>
</div>
@{
    Model.RenderScripts = true;
}
@section inlinescripts
{
    @Html.Partial(MVC.Desktop.Shared.Views._P_ProviderMenu, Model)
}




