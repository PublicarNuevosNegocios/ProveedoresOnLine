@model MarketPlace.Models.Provider.ProviderViewModel
@{
    ViewBag.Title = "Proveedores OnLine - Sucursales";
    Layout = MVC.Desktop.Shared.Views._Layout;

    Model.RenderScripts = false;
}
@*ESTE ES EL ENVUELTO COMPLETO DE MENU LATERAL Y CONTENIDO*@
<div class="POMPProviderGreatWrapper">
    @*ESTE ES QUE TRAE EL PARCIAL QUE PINTA EL MENU LATERAL*@
    <div class="POMPProviderSideMenuWrapper">
        @Html.Partial(MVC.Desktop.Shared.Views._P_ProviderMenu, Model)
    </div>

    <div class="POMPProviderDataWrapper">
        <label class="POMPSectionTitles">Sucursales</label>
        <div class="container-fluid POMPContainerDetail">
            @{
                foreach (var item in Model.RelatedGeneralInfo)
                {
                    <div class="row POMPSectionTitlesBox">
                        <div class="col-sm-12">
                            @if (!string.IsNullOrEmpty(item.BR_City))
                            {
                                <strong>@item.BR_City.</strong>
                            }
                            else
                            {
                                <span>N/D</span>
                            }
                        </div>
                    </div>
                    <br />
                    <div class="container-fluid POMPProviderDetailContainer">
                        <div class="row">
                            @if (!string.IsNullOrEmpty(item.BR_Name))
                            {
                                <div class="col-sm-12 POMPBorderbottom POMPProviderBoxInfo">
                                    <br />
                                    <label class="POMPProviderBoxInfo">Nombre</label>
                                    <br />
                                    <span>  @item.BR_Name</span>
                                </div>
                            }  

                            @if (!string.IsNullOrEmpty(item.BR_Representative))
                            {
                                <div class="col-sm-4 POMPBorderbottom POMPProviderBoxInfo">
                                    <br />
                                    <label class="POMPProviderBoxInfo">Nombre de Contacto</label>
                                    <br />
                                    <span>@item.BR_Representative</span>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(item.BR_Address))
                            {
                                <div class="col-sm-8 POMPBorderbottom  POMPProviderBoxInfo">
                                    <br />
                                    <label class="POMPProviderBoxInfo">Dirección</label>
                                    <br />
                                    <span>@item.BR_Address</span>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(item.BR_Phone))
                            {
                                <div class="col-sm-4 POMPBorderbottom  POMPProviderBoxInfo">
                                    <br />
                                    <label class="POMPProviderBoxInfo">Teléfono</label>
                                    <br />
                                    <span> @item.BR_Phone @(!string.IsNullOrEmpty(item.BR_Extent) ? " ext " + item.BR_Extent : string.Empty)</span>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(item.BR_Cellphone))
                            {
                                <div class="col-sm-4 POMPBorderbottom POMPProviderBoxInfo">
                                    <br />
                                    <label class="POMPProviderBoxInfo">Celular</label>
                                    <br />
                                    <span> @item.BR_Cellphone</span>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(item.BR_Fax))
                            {
                                <div class="col-sm-4 POMPBorderbottom POMPProviderBoxInfo">
                                    <br />
                                    <label class="POMPProviderBoxInfo">Fax</label>
                                    <br />
                                    <span> @item.BR_Fax</span>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(item.BR_Email))
                            {
                                <div class="col-sm-4 POMPBorderbottom POMPProviderBoxInfo">
                                    <br />
                                    <label class="POMPProviderBoxInfo">Correo Electrónico</label>
                                    <br />
                                    <span>  @item.BR_Email</span>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(item.BR_Website))
                            {
                                <div class="col-sm-4 POMPBorderbottom POMPProviderBoxInfo">
                                        <br />
                                        <label class="POMPProviderBoxInfo">Página Web</label>
                                        <br />
                                        <span><a target="_blank" href="http://@item.BR_Website" title="@item.BR_Website">@item.BR_Website</a></span>
                                </div>
                            }
                            <div class="col-sm-4 POMPBorderbottom POMPProviderBoxInfo">
                                <br />
                                <label class="POMPProviderBoxInfo">Principal</label>
                                <br />
                                <span>@(item.BR_IsPrincipal ? "si" : "no")</span>
                            </div>
                            @{
                                string tmp_pais = item.DT_Country;
                                if (tmp_pais != null)
                                {
                                    <div class="col-sm-4 POMPBorderbottom POMPProviderBoxInfo">
                                        @{ 
                                            <br />
                                            <label class="POMPProviderBoxInfo">País</label>
                                            <br />
                                            string[] pais = tmp_pais.Split(',');
                                            <span>@pais[1]</span>
                                        }
                                    </div>
                                }
                            }
                            @{
                                tmp_pais = item.DT_Country;
                                if (tmp_pais != null)
                                {
                                    <div class="col-sm-4 POMPBorderbottom POMPProviderBoxInfo">
                                        @{ 
                                            <br />
                                            <label class="POMPProviderBoxInfo">Estado</label>
                                            <br />
                                            string[] estado = tmp_pais.Split(',');
                                            <span>@estado[0]</span>
                                        }
                                    </div>
                                }
                            }  
                        </div>
                        <br />
                    </div>
                }
            }
        </div>
    </div>
    
</div>    
    @{
        Model.RenderScripts = true;
    }
    @section inlinescripts
{
        @Html.Partial(MVC.Desktop.Shared.Views._P_ProviderMenu, Model)
    }

