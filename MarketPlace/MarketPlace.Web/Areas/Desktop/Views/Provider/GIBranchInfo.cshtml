@model MarketPlace.Models.Provider.ProviderViewModel
@{
    ViewBag.Title = "Proveedores OnLine - Sucursales";
    Layout = MVC.Desktop.Shared.Views._Layout;

    Model.RenderScripts = false;
}
@*ESTE ES EL ENVUELTO COMPLETO DE MENU LATERAL Y CONTENIDO*@
<div class="POMPProviderGreatWrapper">
    @*ESTE ES QUE TRAE EL PARCIAL QUE PINTA EL MENU LATERAL*@
    <div class="POMPProviderSideMenuWrapper">
        @Html.Partial(MVC.Desktop.Shared.Views._P_ProviderMenu, Model)
    </div>

    <div class="POMPProviderDataWrapper">
        <label class="POMPSectionTitles">Sucursales</label>
        <div class="container-fluid">
            @{
                foreach (var item in Model.RelatedGeneralInfo)
                {
                    <div class="POMPEvalTitle" id="POMPEvalTitleMargin">
                        <div class="col-xs-12">
                            <div class="col-xs-12">
                                @if (!string.IsNullOrEmpty(item.BR_City))
                                {
                                    <span>@item.BR_City @item.BR_Name</span>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12">
                        @if (!string.IsNullOrEmpty(item.BR_Representative))
                        {
                            <div class="col-xs-4">
                                <div class="col-xs-12">
                                    <label> Nombre de Contacto </label>
                                </div>
                                <div class="col-xs-12">
                                    <span>@item.BR_Representative</span>
                                </div>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(item.BR_Address))
                        {
                            <div class="col-xs-4">
                                <div class="col-xs-12">
                                    <label> Dirección </label>
                                </div>
                                <div class="col-xs-12">
                                    <span>@item.BR_Address</span>
                                </div>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(item.BR_Phone))
                        {
                            <div class="col-xs-4">
                                <div class="col-xs-12">
                                    <label>Teléfono</label>
                                </div>
                                <div class="col-xs-12">
                                    <span> @item.BR_Phone</span>
                                </div>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(item.BR_Cellphone))
                        {
                            <div class="col-xs-4">
                                <div class="col-xs-12">
                                    <label>Celular</label>
                                </div>
                                <div class="col-xs-12">
                                    <span> @item.BR_Cellphone</span>
                                </div>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(item.BR_Fax))
                        {
                            <div class="col-xs-4">
                                <div class="col-xs-12">
                                    <label>Fax</label>
                                </div>
                                <div class="col-xs-12">
                                    <span> @item.BR_Fax</span>
                                </div>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(item.BR_Email))
                        {
                            <div class="col-xs-4">
                                <div class="col-xs-12">
                                    <label>Correo Electrónico</label>
                                </div>
                                <div class="col-xs-12">
                                    <span>  @item.BR_Email</span>
                                </div>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(item.BR_Website))
                        {
                            <div class="col-xs-4">
                                <div class="col-xs-12">
                                    <label>Página Web</label>
                                </div>
                                <div class="col-xs-12">
                                    <span><a target="_blank" href="http://@item.BR_Website" title="@item.BR_Website">@item.BR_Website</a></span>
                                </div>
                            </div>
                        }
                        <div class="col-xs-4">
                            <div class="col-xs-12">
                                <label>Principal</label>
                            </div>
                            <div class="col-xs-12">
                                <span>@(item.BR_IsPrincipal ? "si" : "no")</span>
                            </div>
                        </div>
                        @{ 
                         string tmp_pais = item.DT_Country;
                         if (tmp_pais != null)
                         {
                            string[] pais_estado = tmp_pais.Split(',');
                            <div class="col-xs-4">
                                <div class="col-xs-12">
                                    <label>Pais</label>
                                </div>
                                <div class="col-xs-12">
                                    <span>@pais_estado[1]</span>
                                </div>
                            </div>
                            <div class="col-xs-4">
                                <div class="col-xs-12">
                                    <label>Estado</label>
                                </div>
                                <div class="col-xs-12">
                                    <span>@pais_estado[0]</span>
                                </div>
                            </div>
                         }
                        }


                    </div>
                }
            }

        </div>
    </div>
</div>
@{
    Model.RenderScripts = true;
}
@section inlinescripts
{
    @Html.Partial(MVC.Desktop.Shared.Views._P_ProviderMenu, Model)
}

