@model MarketPlace.Models.Provider.ProviderViewModel
@{
    ViewBag.Title = "Experience";
    Layout = MVC.Desktop.Shared.Views._Layout;

    Model.RenderScripts = false;
}
@*ESTE ES EL ENVUELTO COMPLETO DE MENU LATERAL Y CONTENIDO*@
<div class="POMPProviderGreatWrapper">
    @*ESTE ES QUE TRAE EL PARCIAL QUE PINTA EL MENU LATERAL*@
    <div class="POMPProviderSideMenuWrapper">
        @Html.Partial(MVC.Desktop.Shared.Views._P_ProviderMenu, Model)
    </div>

    <div class="POMPProviderDataWrapper">
        <label class="POMPSectionTitles">Experiencias</label>
        <ul class="POMPProviderInfoMultipleValues">
            @{
                foreach (var item in Model.RelatedComercialInfo)
                {
                    <li>
                        <label>
                        Tipo de Contrato
                        @if (item.EX_ContractType == "303001")
                        {
                        <span>Contratos / Servicios</span>
                        }
                        else if (item.EX_ContractType == "303002")
                        {
                        <span>Ordenes de compra</span>
                        }
                        </label>
                        <label>
                                Fecha Inicial
                            <span>@item.EX_DateIssue</span>
                        </label>
                        <label>
                                Fecha Final
                            <span>@item.EX_DueDate</span>
                        </label>
                        <label>
                                Cliente
                            <span>@item.EX_Client</span>
                        </label>
                        <label>
                            Número de Contacto
                            <span>@item.EX_ContractNumber</span>
                        </label>
                        <label>
                                Valor del Contrato
                            <span>@item.EX_ContractValue</span>
                        </label>
                        <label>
                                Teléfono
                            <span>@item.EX_Phone</span>
                        </label>
                        <label>
                            Objeto del Contrato
                            <span title="@item.EX_ContractSubject">@item.EX_ContractSubject</span>
                        </label>
                        <label>
                            Maestra Estandar                    
                            @foreach (var ActivityItem in item.EX_EconomicActivity)
                            {
                                <span title="@ActivityItem.ActivityName">@ActivityItem.ActivityName</span>
                            }
                        </label>
                        <label>
                            Maestra Personalizada
                            @foreach (var ActivityItem in item.EX_CustomEconomicActivity)
                            {
                                <span title="@ActivityItem.ActivityName">@ActivityItem.ActivityName</span>
                            }
                        </label>


                        <label>
                            Archivo de Soporte
                            @{
                            var UlrContent = item.EX_ExperienceFile;
                            if (!string.IsNullOrEmpty(UlrContent))
                            {
                                <a class="POMPProviderDocumetIcon" href="@UlrContent" title=""></a>
                            @*ESTE IFRAME SE CAMBIA POR UN ICONO PARA IR AL ARCHIVO*@
                            @*<iframe src="@(Server.UrlDecode(Url.Action(MVC.Desktop.Provider.ActionNames.GetProviderFileBytes, MVC.Provider.Name, new { FilePath = UlrContent })))" frameborder="0"></iframe>*@
                            <a target="_blank" href="@UlrContent">Ver Archivo</a>
                            }
                            }
                        </label>
                    </li>

                }
            }
        </ul>
    </div>
    @{
        Model.RenderScripts = true;
    }
    @section inlinescripts
{
        @Html.Partial(MVC.Desktop.Shared.Views._P_ProviderMenu, Model)
    }




