@model MarketPlace.Models.Provider.ProviderViewModel
@{
    ViewBag.Title = "Proveedores OnLine - Calificación del proveedor";
    Layout = MVC.Desktop.Shared.Views._Layout;

    Model.RenderScripts = false;
}
@*ESTE ES EL ENVUELTO COMPLETO DE MENU LATERAL Y CONTENIDO*@
<div class="POMPProviderGreatWrapper">
    @*ESTE ES QUE TRAE EL PARCIAL QUE PINTA EL MENU LATERAL*@
    <div class="POMPProviderSideMenuWrapper">
        @Html.Partial(MVC.Desktop.Shared.Views._P_ProviderMenu, Model)
    </div>
    <div class="POMPProviderDataWrapper">
        <label class="POMPSectionTitles">Calificación del proveedor</label>
        <div class="container-fluid POMPContainerDetail">
            <div class="row POMPSectionTitlesBox">
                <div class="col-xs-12">
                    <label>Proceso de calificación</label>
                </div>
            </div>
            <div class="container-fluid POMPProviderDetailContainer">
                <div class="row">
                    <div class="col-xs-4">
                        <br />
                        <label>Calificación:</label>
                        <br />
                        <span>@Model.ProviderCalification.TotalCalification</span>
                    </div>
                    <div>
                        <br />
                        <label>Puntuación total:</label>
                        <br />
                        <span>@Model.ProviderCalification.TotalScore Puntos</span>
                    </div>
                </div>
                <br />
                <div class="row">
                    @foreach (var Module in Model.ProviderCalification.ProRelatedCalificationProject.FirstOrDefault().CalificationProjectItemBatchModel)
                    {
                        <div class="row POMPSectionTitlesBox">
                            <div class="col-xs-6">
                                <label>Modulo @(!string.IsNullOrEmpty(Module.CalificationProjectConfigItem.CalificationProjectConfigItemName) ? Module.CalificationProjectConfigItem.CalificationProjectConfigItemName : Module.CalificationProjectConfigItem.CalificationProjectConfigItemType.ItemName) - @Module.ItemScore Puntos</label>
                            </div>
                            <div class="col-sm-6 text-right">
                                <a class="POMPLinkDetail_Provider">Ver Detalle</a>
                                @*<a class="POMPLinkDetail_Provider" href="@(Url.RouteUrl
                                                                        (MarketPlace.Models.General.Constants.C_Routes_Default,
                                                                        new
                                                                        {
                                                                            controller = MVC.Provider.Name,
                                                                            action = MVC.Provider.ActionNames.GICalificationProjectDetail,
                                                                            ProviderPublicId = Request["ProviderPublicId"]
                                                                        }))">
                                    Ver Detalle
                                </a>*@
                            </div>
                        </div>
                        <br />
                        <div class="container-fluid POMPProviderDetailContainer">
                            <div class="row">
                                @foreach (var Rule in Module.CalificatioProjectItemInfoModel)
                                {
                                    <div class="col-xs-12">
                                        <div class="col-xs-3">
                                            <br />
                                            <label>Pregunta:</label>
                                            <br />
                                            <span>@Rule.CalificationProjectConfigItemInfoModel.Question.ItemName</span>
                                        </div>
                                        <div class="col-xs-2">
                                            <br />
                                            <label>Regla:</label>
                                            <br />
                                            <span>@Rule.CalificationProjectConfigItemInfoModel.Rule.ItemName</span>
                                        </div>
                                        <div class="col-xs-2">
                                            <br />
                                            <label>Validación</label>
                                            <br />
                                            <span>@Rule.CalificationProjectConfigItemInfoModel.ValueType.ItemName</span>
                                        </div>
                                        <div class="col-xs-3">
                                            <br />
                                            <label>Valor</label>
                                            <br />
                                            <span>@Rule.CalificationProjectConfigItemInfoModel.Value</span>
                                        </div>
                                        <div class="col-xs-1">
                                            <br />
                                            <label>Resultado</label>
                                            <br />
                                            <span>@Rule.ItemInfoScore</span>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@{
    Model.RenderScripts = true;
}

@section inlinescripts
{
    @Html.Partial(MVC.Desktop.Shared.Views._P_ProviderMenu, Model)
}